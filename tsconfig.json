{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/src",
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "root/*": ["../*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
